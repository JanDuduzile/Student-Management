@model StudentManagement.Models.StudentViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Students" asp-action="Index">
    <p>
        <select asp-for="Section" asp-items="Model.Section">
            <option value="">All</option>
        </select>
        Search using first or last name: <input type="text" name="SearchString" />
        <input type="submit" value="Filter"/>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Students![0])
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students![0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students![0].RegNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students![0].Section)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students![0].Program)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Students!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Section)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Program)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
